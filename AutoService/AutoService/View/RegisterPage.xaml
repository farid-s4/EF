<UserControl x:Class="AutoService.View.RegisterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AutoService.View"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Регистрация" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="20,30,20,30"/>

        <TextBlock Grid.Row="1" Text="Логин:" 
                   Margin="50,10,50,5"/>
        <TextBox Grid.Row="2" Name="txtLogin" 
                 Height="30" Margin="50,0,50,15"
                 Padding="5" FontSize="14"/>

        <TextBlock Grid.Row="3" Text="Пароль:" 
                   Margin="50,0,50,5"/>
        <PasswordBox Grid.Row="4" Name="txtPassword" 
                     Height="30" Margin="50,0,50,15"
                     Padding="5" FontSize="14"/>

        <TextBlock Grid.Row="5" Text="Подтвердите пароль:" 
                   Margin="50,0,50,5"/>
        <PasswordBox Grid.Row="6" Name="txtConfirmPassword" 
                     Height="30" Margin="50,0,50,20"
                     Padding="5" FontSize="14"/>

        <StackPanel Grid.Row="7" Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top">
            <Button Name="btnRegister" Content="Зарегистрироваться" 
                    Width="140" Height="35" 
                    Margin="0,0,10,0" 
                    FontSize="14" Click="btnRegister_Click"/>
            <Button Name="btnCancel" Content="Отмена" 
                    Width="80" Height="35" 
                    FontSize="14" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</UserControl>